<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4">


        <Button
            android:id="@+id/clear_text"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="AC"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/cut"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="X"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/precentage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:shadowColor="@color/black"
            android:text="%"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:shadowColor="@color/black"
            android:text="/"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/seven"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"

            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="7"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/eight"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"

            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="8"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/nine"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"

            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="9"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/multipy"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"

            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="*"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/subraction"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"

            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="-"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/six"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"

            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="6"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/five"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"

            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="5"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/four"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"

            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="4"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/one"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"

            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="1"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/two"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"

            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="2"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/three"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"

            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="3"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/addition"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"

            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="+"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />


        <Button
            android:id="@+id/right_bracket"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"

            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/neon"
            android:onClick="ButtonClick"
            android:text=")"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/zero"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"

            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/neon"
            android:onClick="ButtonClick"
            android:text="0"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/lef_braket"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"

            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/neon"
            android:onClick="ButtonClick"
            android:text="0"
            android:textColor="@color/neon"
            android:textSize="25sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/equal"

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"

            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:onClick="ButtonClick"
            android:text="="
            android:textColor="@color/black"
            android:textSize="40sp"
            app:backgroundTint="#FFA500" />




        </GridLayout>
</RelativeLayout>